// tsconfig.json
{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types/types"]
  },
  "include": [
    "**/*.ts",
    "src/**/*", 
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
